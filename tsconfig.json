{
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "src/*.svelte",
    "src/**/*.svelte"
  ],
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "isolatedModules": true,
    /**
        To have warnings/errors of the Svelte compiler at the correct position,
        enable source maps by default.
    */
    "noImplicitAny": false,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "src/*": [
        "src/*"
      ]
    },
    "types": [
      "svelte",
      "svelte/store",
      "svelte/motion",
      "svelte/transition",
      "svelte/animate",
      "svelte/easing"
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
